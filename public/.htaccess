#Mapea la url y redirecciona a index.php si se escribe en la url un archivo que no existe
<IfModule mod_rewrite.c>
	Options -Multiviews
	RewriteEngine On

	#para conexion en local
	RewriteBase /proyectos/PidoRapido/public

	#para conexion en remoto
	#RewriteBase http://www.pedidoremoto.com/public


	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>